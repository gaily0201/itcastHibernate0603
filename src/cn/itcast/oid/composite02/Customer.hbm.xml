<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.itcast.oid.composite02.Customer" table="customers">
         <composite-id name="id" class="cn.itcast.oid.composite02.CustomerID">
             <key-property name="firstName" column="firstname" type="string"/>
             <key-property name="lastName" column="lastName" type="string"/>
         </composite-id>
	
		<property name="des" type="text">
			<column name="des"></column>
		</property>
	</class>
</hibernate-mapping>
